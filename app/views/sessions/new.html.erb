<h2>Anmelden</h2>
<%= form_tag login_path do %>
  <div>
    <%= label_tag :email, "E-Mail:" %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password, "Passwort:" %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Anmelden" %>
<% end %>

<p class="mt-4 text-gray-700">
  Noch keinen Account? 
  <%= link_to "Registrieren", new_user_path, class: "text-blue-500 hover:text-blue-700 underline" %>
</p>
