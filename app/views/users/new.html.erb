<h2>Registrieren</h2>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "Fehler") %> gefunden:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :username, "Benutzername:" %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email, "E-Mail:" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, "Passwort:" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Passwort bestÃ¤tigen:" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Registrieren" %>
<% end %>
