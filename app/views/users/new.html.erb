<h2>Registrieren</h2>
<%= form_for @user do |f| %>


  <div>
    <%= f.label :username, "Benutzername:" %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email, "E-Mail:" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, "Passwort:" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Passwort bestätigen:" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "Registrieren" %>
<% end %>

<p class="mt-4 text-gray-700">
  Plötzlich doch n Account? 
  <%= link_to "Anmelden", login_path, class: "text-blue-500 hover:text-blue-700 underline" %>
</p>
